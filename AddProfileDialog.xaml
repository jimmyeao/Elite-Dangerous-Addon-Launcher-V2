<Window x:Class="Elite_Dangerous_Addon_Launcer_V2.AddProfileDialog"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Profile" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TbProfileName" Grid.Row="0" Margin="10" />

        <Button x:Name="BtnOk" Grid.Row="1" Margin="10" Content="OK" Click="BtnOk_Click" />
    </Grid>
</Window>